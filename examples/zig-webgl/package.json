{
	"name": "@example/zig-webgl",
	"version": "0.0.1",
	"private": true,
	"description": "Basic Zig/WebAssembly WebGL demo",
	"repository": "https://github.com/thi-ng/umbrella",
	"author": "Karsten Schmidt <k+npm@thi.ng>",
	"license": "Apache-2.0",
	"scripts": {
		"start": "yarn build:zig && yarn css:build && yarn start:only",
		"start:only": "vite --host --open",
		"dev": "mprocs 'yarn build:zig' 'yarn css:watch' 'yarn start:only'",
		"css:watch": "../../node_modules/.bin/metacss develop --bundle --watch --pretty --out-specs css/framework.json --out-css css/style.css --force @css/includes.txt ../../packages/meta-css/specs/*.mcss.json css/*.mcss.json css/*.mcss",
		"css:build": "../../node_modules/.bin/metacss develop --bundle --out-specs css/framework.json --out-css css/style.css --force @css/includes.txt ../../packages/meta-css/specs/*.mcss.json css/*.mcss.json css/*.mcss",
		"clean": "bun ../../tools/src/clean-package.ts .zig-cache zig-out",
		"build": "yarn build:zig && yarn css:build && tsc && vite build --base='./'",
		"build:zig": "yarn prepare:zig && zig build && wasm-opt zig-out/bin/main.wasm -o src/main.wasm -O3 -all && wasm-dis -o src/main.wast src/main.wasm",
		"prepare:zig": "cp ../../node_modules/@thi.ng/wasm-api/zig/build.zig wasm-api-build.zig",
		"preview": "vite preview --host --open"
	},
	"devDependencies": {
		"@thi.ng/meta-css": "workspace:^",
		"typescript": "^5.9.2",
		"vite": "^7.1.4"
	},
	"dependencies": {
		"@thi.ng/api": "workspace:^",
		"@thi.ng/logger": "workspace:^",
		"@thi.ng/wasm-api": "workspace:^",
		"@thi.ng/wasm-api-schedule": "workspace:^",
		"@thi.ng/wasm-api-webgl": "workspace:^"
	},
	"browser": {
		"process": false
	},
	"thi.ng": {
		"readme": [
			"wasm-api",
			"wasm-api-dom",
			"wasm-api-schedule",
			"wasm-api-webgl",
			"webgl"
		],
		"screenshot": "examples/zig-webgl.avif"
	},
	"keywords": [
		"2d",
		"animation",
		"browser",
		"example",
		"interop",
		"shader",
		"time",
		"wasm",
		"webgl",
		"zig"
	]
}
