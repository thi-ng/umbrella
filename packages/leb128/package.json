{
	"name": "@thi.ng/leb128",
	"version": "3.1.7",
	"description": "WASM based LEB128 encoder / decoder (signed & unsigned)",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/binary",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"contributors": [
		"jtenner (https://github.com/jtenner)"
	],
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:binary": "tools/build-binary.sh",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
		"doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/checks": "^3.6.7",
		"@thi.ng/errors": "^2.5.11",
		"@thi.ng/transducers-binary": "^2.1.124"
	},
	"devDependencies": {
		"@microsoft/api-extractor": "^7.47.0",
		"esbuild": "^0.23.0",
		"typedoc": "^0.26.3",
		"typescript": "^5.5.3"
	},
	"keywords": [
		"64bit",
		"bigint",
		"binary",
		"conversion",
		"integer",
		"typedarray",
		"typescript",
		"varint",
		"wasm",
		"webassembly",
		"zig",
		"ziglang"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts",
		"zig"
	],
	"exports": {
		".": {
			"default": "./index.js"
		}
	},
	"thi.ng": {
		"alias": "leb",
		"year": 2019
	}
}
