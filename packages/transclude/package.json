{
	"name": "@thi.ng/transclude",
	"version": "1.1.40",
	"description": "Extensible functional template engine for text document generation, incl. various high-level Markdown features",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/transclude",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		},
		{
			"type": "liberapay",
			"url": "https://liberapay.com/thi.ng"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts tpl",
		"doc": "typedoc --options ../../typedoc.json --out doc src/index.ts",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "npm publish --access public",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.12.7",
		"@thi.ng/checks": "^3.7.23",
		"@thi.ng/errors": "^2.5.47",
		"@thi.ng/file-io": "^2.2.17",
		"@thi.ng/logger": "^3.2.6",
		"@thi.ng/strings": "^3.9.28",
		"@thi.ng/transducers": "^9.6.16"
	},
	"devDependencies": {
		"@types/node": "^24.10.1",
		"esbuild": "^0.27.0",
		"typedoc": "^0.28.14",
		"typescript": "^5.9.3"
	},
	"keywords": [
		"functional",
		"generator",
		"json",
		"markdown",
		"no-browser",
		"nodejs",
		"npm",
		"parser",
		"template",
		"text",
		"tool",
		"transclusion",
		"typescript"
	],
	"publishConfig": {
		"access": "public"
	},
	"browser": {
		"process": false,
		"setTimeout": false
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts",
		"tpl"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./tpl/file": {
			"default": "./tpl/file.js"
		},
		"./tpl/markdown": {
			"default": "./tpl/markdown.js"
		},
		"./tpl/pkg": {
			"default": "./tpl/pkg.js"
		},
		"./tpl/whitespace": {
			"default": "./tpl/whitespace.js"
		},
		"./transclude": {
			"default": "./transclude.js"
		}
	},
	"thi.ng": {
		"related": [
			"hiccup-markdown",
			"markdown-table",
			"proctext",
			"tangle"
		],
		"year": 2022
	}
}
