{
	"name": "@thi.ng/rdom",
	"version": "1.7.43",
	"description": "Lightweight, reactive, VDOM-less UI/DOM components with async lifecycle and @thi.ng/hiccup compatible",
	"type": "module",
	"module": "./index.js",
	"typings": "./index.d.ts",
	"sideEffects": false,
	"repository": {
		"type": "git",
		"url": "https://github.com/thi-ng/umbrella.git"
	},
	"homepage": "https://thi.ng/rdom",
	"funding": [
		{
			"type": "github",
			"url": "https://github.com/sponsors/postspectacular"
		},
		{
			"type": "patreon",
			"url": "https://patreon.com/thing_umbrella"
		},
		{
			"type": "liberapay",
			"url": "https://liberapay.com/thi.ng"
		}
	],
	"author": "Karsten Schmidt (https://thi.ng)",
	"license": "Apache-2.0",
	"scripts": {
		"build": "yarn build:esbuild && yarn build:decl",
		"build:decl": "tsc --declaration --emitDeclarationOnly",
		"build:esbuild": "esbuild --format=esm --platform=neutral --target=es2022 --tsconfig=tsconfig.json --outdir=. src/**/*.ts",
		"clean": "bun ../../tools/src/clean-package.ts",
		"doc": "typedoc --options ../../typedoc.json --out doc src/index.ts",
		"doc:readme": "bun ../../tools/src/module-stats.ts && bun ../../tools/src/readme.ts",
		"pub": "yarn npm publish --access public",
		"pub:wip": "yarn npm publish --access public --no-git-tag-version",
		"test": "bun test",
		"tool:tangle": "../../node_modules/.bin/tangle src/**/*.ts"
	},
	"dependencies": {
		"@thi.ng/api": "^8.11.29",
		"@thi.ng/checks": "^3.7.9",
		"@thi.ng/errors": "^2.5.35",
		"@thi.ng/hiccup": "^5.3.15",
		"@thi.ng/paths": "^5.2.12",
		"@thi.ng/prefixes": "^2.3.46",
		"@thi.ng/rstream": "^9.2.26",
		"@thi.ng/strings": "^3.9.15"
	},
	"devDependencies": {
		"esbuild": "^0.25.5",
		"typedoc": "^0.28.5",
		"typescript": "^5.8.3"
	},
	"keywords": [
		"async",
		"browser",
		"compiler",
		"component",
		"css",
		"datastructure",
		"dom",
		"hiccup",
		"html",
		"lifecycle",
		"reactive",
		"rstream",
		"svg",
		"tree",
		"typescript",
		"ui"
	],
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	},
	"files": [
		"./*.js",
		"./*.d.ts"
	],
	"exports": {
		".": {
			"default": "./index.js"
		},
		"./api": {
			"default": "./api.js"
		},
		"./async": {
			"default": "./async.js"
		},
		"./checks": {
			"default": "./checks.js"
		},
		"./compile": {
			"default": "./compile.js"
		},
		"./component": {
			"default": "./component.js"
		},
		"./dom": {
			"default": "./dom.js"
		},
		"./event": {
			"default": "./event.js"
		},
		"./idgen": {
			"default": "./idgen.js"
		},
		"./klist": {
			"default": "./klist.js"
		},
		"./lazy": {
			"default": "./lazy.js"
		},
		"./list": {
			"default": "./list.js"
		},
		"./object": {
			"default": "./object.js"
		},
		"./promise": {
			"default": "./promise.js"
		},
		"./replace": {
			"default": "./replace.js"
		},
		"./sub": {
			"default": "./sub.js"
		},
		"./switch": {
			"default": "./switch.js"
		},
		"./wrap": {
			"default": "./wrap.js"
		}
	},
	"thi.ng": {
		"related": [
			"hdom",
			"hiccup",
			"hiccup-html",
			"hiccup-svg",
			"transducers"
		],
		"year": 2020
	}
}
