{
    "name": "@thi.ng/webgl-msdf",
    "version": "2.1.2",
    "description": "Multi-channel SDF font rendering & basic text layout for WebGL",
    "type": "module",
    "module": "./index.js",
    "typings": "./index.d.ts",
    "sideEffects": false,
    "repository": {
        "type": "git",
        "url": "https://github.com/thi-ng/umbrella.git"
    },
    "homepage": "https://github.com/thi-ng/umbrella/tree/develop/packages/webgl-msdf#readme",
    "funding": [
        {
            "type": "github",
            "url": "https://github.com/sponsors/postspectacular"
        },
        {
            "type": "patreon",
            "url": "https://patreon.com/thing_umbrella"
        }
    ],
    "author": "Karsten Schmidt <k+npm@thi.ng>",
    "license": "Apache-2.0",
    "scripts": {
        "build": "yarn clean && tsc --declaration",
        "clean": "rimraf '*.js' '*.d.ts' '*.map' doc",
        "doc": "typedoc --excludePrivate --excludeInternal --out doc src/index.ts",
        "doc:ae": "mkdir -p .ae/doc .ae/temp && api-extractor run --local --verbose",
        "doc:readme": "yarn doc:stats && tools:readme",
        "doc:stats": "tools:module-stats",
        "pub": "yarn npm publish --access public",
        "test": "testament test"
    },
    "dependencies": {
        "@thi.ng/api": "^8.3.2",
        "@thi.ng/shader-ast": "^0.12.2",
        "@thi.ng/transducers": "^8.1.2",
        "@thi.ng/vector-pools": "^3.1.2",
        "@thi.ng/vectors": "^7.2.2",
        "@thi.ng/webgl": "^6.1.2"
    },
    "devDependencies": {
        "@microsoft/api-extractor": "^7.18.19",
        "@thi.ng/testament": "^0.2.2",
        "@types/node": "^16.11.7",
        "rimraf": "^3.0.2",
        "tools": "workspace:^",
        "typedoc": "^0.22.9",
        "typescript": "^4.5.2"
    },
    "keywords": [
        "browser",
        "canvas",
        "font",
        "layout",
        "msdf",
        "sdf",
        "shader",
        "text",
        "typescript",
        "typography",
        "webgl"
    ],
    "publishConfig": {
        "access": "public"
    },
    "engines": {
        "node": ">=12.7"
    },
    "files": [
        "*.js",
        "*.d.ts"
    ],
    "exports": {
        ".": {
            "import": "./index.js"
        },
        "./api": {
            "import": "./api.js"
        },
        "./convert": {
            "import": "./convert.js"
        },
        "./shader": {
            "import": "./shader.js"
        },
        "./text": {
            "import": "./text.js"
        }
    },
    "thi.ng": {
        "parent": "@thi.ng/webgl",
        "year": 2019
    }
}
